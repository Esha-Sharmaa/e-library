<%- include("header.ejs") %>
    <%- include("sidebar.ejs") %>
        <main id="main" class="main">

            <div class="pagetitle">
                <h1>Add Blog</h1>
                <nav>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/admin-dashboard">Home</a></li>
                        <li class="breadcrumb-item">Manage Blogs</li>
                        <li class="breadcrumb-item active">Add Blog</li>
                    </ol>
                </nav>
            </div><!-- End Page Title -->

            <section class="section">
                <div class="row">
                    <form action="/api/v1/blogs/add-blog" method="post">
                        <div class="col-lg-12">
                            <% if (errorMessages && errorMessages.length> 0) { %>
                                <span class="error-message alert-dismissible fade show" role="alert">
                                    <% errorMessages.forEach(function(message) { %>
                                        <p>
                                            <%= message %>
                                        </p>
                                        <% }) %>
                                </span>
                                <% } %>
                                    <% if (successMessages && successMessages.length> 0) { %>
                                        <span class="success-message alert-dismissible fade show" role="alert">
                                            <% successMessages.forEach(function(message) { %>
                                                <%= message %>

                                                    <% }) %>
                                        </span>
                        <% } %>
                            <div class="card">
                                <div class="card-body">
                                    <label for="blogTitle" class="form-label card-title">Blog
                                        Title</label>
                                    <input type="text" class="form-control blog-title" id="blogTitle" name="blogTitle"
                                        style="background-color: #222f3e; color: white;"
                                        placeholder="Write Blog Title Here" required>
                                </div>
                            </div>
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">TinyMCE Editor</h5>
                                    <!-- TinyMCE Editor -->
                                    <textarea class="tinymce-editor" name="blogContent">
                            <h1>Hello <%= loggedUser.fullName %></h1>
                            <p>This is the Editor. Write your blog here.</p>
                            <p>Happy Writing ðŸ˜€ðŸ˜€</p>
                        </textarea><!-- End TinyMCE Editor -->
                                    <button type="submit" class="btn btn-primary mt-3">Upload</button>
                                </div>
                            </div>
                </div>
                </form>
                </div>
            </section>


        </main><!-- End #main -->
        <%- include("footer.ejs") %>