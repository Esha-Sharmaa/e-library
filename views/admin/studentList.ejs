<%- include("header.ejs") %>
    <%- include("sidebar.ejs") %>
        <main id="main" class="main">

            <div class="pagetitle">
                <h1>Student List</h1>
                <nav>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                        <li class="breadcrumb-item">Manage Users</li>
                        <li class="breadcrumb-item active">Student List</li>
                    </ol>
                </nav>
            </div><!-- End Page Title -->

            <section class="section">
                <div class="row">
                    <div class="col-lg-12">

                        <div class="card">
                            <div class="d-flex justify-content-between align-items-center p-2">
                                <h3 class="card-title">Student List</h3>
                                <button type="button" class="btn btn-dark" data-bs-toggle="modal"
                                    data-bs-target="#addStudentModal">Add Student</button>
                            </div>
                            <% if (errorMessages && errorMessages.length> 0) { %>
                                <div class="alert alert-danger alert-dismissible fade show" role="alert"
                                    style="padding: 10px; font-size: 13px;">
                                    <% errorMessages.forEach(function(message) { %>
                                        <%= message %>

                                            <% }) %>
                                </div>
                                <% } %>
                                    <% if (successMessages && successMessages.length> 0) { %>
                                        <div class="alert alert-success alert-dismissible fade show alert-custom"
                                            role="alert">
                                            <% successMessages.forEach(function(message) { %>
                                                <%= message %>

                                                    <% }) %>
                                        </div>
                                        <% } %>
                                            <!-- Table with stripped rows -->
                                            <table class="table datatable">
                                                <thead>
                                                    <tr>
                                                        <th>Full Name</th>
                                                        <th>Enrollment</th>
                                                        <th>Course</th>
                                                        <th>Phone</th>
                                                        <th>Email</th>
                                                        <th>Action</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% studentList.forEach(student=> { %>
                                                        <tr>
                                                            <td>
                                                                <%= student.fullName %>
                                                            </td>
                                                            <td>
                                                                <%= student.enrollmentNumber %>
                                                            </td>
                                                            <td>
                                                                <%= student.course %>
                                                            </td>
                                                            <td>
                                                                <%= student.phoneNumber %>
                                                            </td>
                                                            <td>
                                                                <%= student.email %>
                                                            </td>
                                                            <td>
                                                                <a href="/api/v1/users/delete-user?id=<%= student._id%>"
                                                                    class="badge bg-danger">Delete</a>

                                                            </td>
                                                        </tr>
                                                        <% }); %>
                                                </tbody>
                                            </table>
                                            <!-- End Table with stripped rows -->

                        </div>
                    </div>
                </div>
            </section>

            <!-- Add Student Modal -->
            <div class="modal fade" id="addStudentModal" tabindex="-1" aria-labelledby="addStudentModalLabel"
                aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="addStudentModalLabel">Add Student</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form action="/api/v1/users/register" method="POST">
                                <div class="mb-3">
                                    <label for="fullName" class="form-label">Full Name</label>
                                    <input type="text" class="form-control" id="fullName" name="fullName" required>
                                </div>
                                <div class="mb-3">
                                    <label for="enrollmentNumber" class="form-label">Enrollment Number</label>
                                    <input type="text" class="form-control" id="enrollmentNumber"
                                        name="enrollmentNumber" required>
                                </div>
                                <div class="mb-3">
                                    <label for="role" class="form-label">Role</label>
                                    <input type="text" class="form-control" id="role" name="role" value="Student"
                                        disabled required>

                                    <input type="hidden" name="role" value="Student" />
                                </div>

                                <div class="mb-3">
                                    <label for="password" class="form-label">Password</label>
                                    <input type="password" class="form-control" id="password" name="password" required>
                                </div>
                                <button type="submit" class="btn btn-primary">Add Student</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- End Add Student Modal -->

        </main><!-- End #main -->
        <%- include('footer.ejs') %>
