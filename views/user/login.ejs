<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SOS Computer Application's E-Book Hub</title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <!-- Favicons -->
    <link href="images/favicon.ico" rel=" icon">
    <link href="images/apple-touch-icon.png" rel="apple-touch-icon">
    <!-- Vendor CSS Files -->
    <link href="assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="assets/vendor/quill/quill.snow.css" rel="stylesheet">
    <link href="assets/vendor/quill/quill.bubble.css" rel="stylesheet">
    <link href="assets/vendor/remixicon/remixicon.css" rel="stylesheet">
    <link href="assets/vendor/simple-datatables/style.css" rel="stylesheet">
    <link rel="stylesheet" href="css/style.css">
    <style>
        .login-container {
            border-radius: 20px;
            background: linear-gradient(145deg,
                    rgb(223, 240, 244),
                    rgb(233, 212, 242));
            overflow: hidden;
        }

        .img {
            width: 100%;
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
        }

        .margin {
            margin-top: 70px;
            margin-bottom: 100px;
        }

        body {
            background: linear-gradient(235deg,
                    rgb(229, 214, 236),
                    #65b0d5,
                    rgb(229, 214, 236));
            font-family: "Ubuntu", sans-serif;
            font-optical-sizing: auto;
            background-color: white;

        }

        .btn-primary:hover {
            background-color: #bf9feb;
        }

        @media screen and (max-width: 600px) {
            .body {
                background-color: #c8dfea;
            }

            .margin {
                margin-top: 20px;
                margin-bottom: 20px;
            }
        }

        /* #200852 */
    </style>
</head>

<body class="body">
    <div class="container-fluid">
        <div class="container login-container my-4">
            <!-- nav start -->
            <nav class="navbar navbar-expand-lg">
                <div class="container-fluid">
                    <button style="background-color: white" class="navbar-toggler my-1" type="button"
                        data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo03"
                        aria-controls="navbarTogglerDemo03" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <a class="navbar-brand" href="/"><img src="images/jiwajij.png" width="80" height="80" alt="" /></a>
                    <div class="collapse navbar-collapse" id="navbarTogglerDemo03">
                        <ul class="navbar-nav navbar-nav-home mx-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link" href="/"><i class="bi bi-house-door"></i> Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/books"><i class="bi bi-book"></i> Books</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/blogs"><i class="bi bi-journal-text"></i> Blogs</a>
                            </li>
                        </ul>
                        <div class="form-inline ml-auto">
                            <a href="login" class="btn btn-outline-primary my-2 my-sm-0">
                                <i class="bi bi-box-arrow-in-right"></i> Sign In
                            </a>
                        </div>
                    </div>
                </div>
            </nav>
            <!-- nav end -->

            <!-- form start -->

            <div class="row">
                <div class="col-md-6 my-4 d-flex justify-content-center px-4">
                    <img class="img margin" src="images/login-Photoroom.png" alt="" />
                </div>

                <div class="col-md-6 my-2 d-flex justify-content-center">

                    <div class="card shadow-lg margin" style="width: 380px;">
                        <% if (errorMessages && errorMessages.length> 0) { %>
                            <span class="error-message" role="alert">
                                <% errorMessages.forEach(function(message) { %>
                                    <p>
                                        <%= message %>
                                    </p>
                                    <% }) %>
                            </span>
                            <% } %>
                                <div class="card-body">
                                    <h4 class="text-center">Student/Admin Login</h4>
                                    <br />
                                    <form action="/api/v1/users/login" method="post">
                                        <div class="floating-label">
                                            <input type="text" name="enrollmentNumber" id="username"
                                                class="form-control" placeholder=" " />
                                            <label for="username">
                                                <i class="bi bi-person-fill"></i> Enrollment/Admin ID
                                            </label>
                                        </div>
                                        <div class="floating-label mt-3">
                                            <input type="password" name="password" id="password" class="form-control"
                                                placeholder=" " />
                                            <label for="password">
                                                <i class="bi bi-key-fill"></i> Password
                                            </label>
                                        </div>
                                        <div class="text-center mt-4">
                                            <button type="submit" class="btn btn-primary">
                                                <i class="bi bi-door-open"></i> Login
                                            </button>
                                        </div>
                                    </form>
                                </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</body>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>

</html>